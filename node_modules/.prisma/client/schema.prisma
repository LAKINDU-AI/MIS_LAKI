datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     Role
}

model Branch {
  id    Int    @id @default(autoincrement())
  name  String
  sales Sale[]
}

model Sale {
  id       Int      @id @default(autoincrement())
  branchId Int
  amount   Float
  date     DateTime @default(now())
  Branch   Branch   @relation(fields: [branchId], references: [id])
}

enum Role {
  ADMIN
  HQ_MANAGER
  MANAGER
  WAITER
}
